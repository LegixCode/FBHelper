{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "lib": ["esnext", "dom"],
        "types": ["@types/chrome", "@types/dom-navigation", "vite/client"],
        "paths": {
            "@/*": ["./src/*"],
        },
    },
    "typeRoots": ["./node_modules/@types", "resources/js/types"],
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue"
    ],
    "exclude": ["node_modules", "public"]
}
